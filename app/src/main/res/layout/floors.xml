<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#d0000000"
    tools:context=".Hostelallotmentback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="32dp"
        android:layout_height="400dp"
        android:background="#fff"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <Button
                    android:backgroundTint="@color/amber"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Floor1"
                    android:id="@+id/floor_1"
                    android:fontFamily="@font/psb"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Floor2"
                    android:backgroundTint="@color/amber"

                    android:id="@+id/floor_2"
                    android:fontFamily="@font/psb"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Floor3"
                    android:id="@+id/floor_3"
                    android:backgroundTint="@color/amber"

                    android:fontFamily="@font/psb"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            android:id="@+id/floormap"
            android:layout_marginBottom="36dp"
            android:src="@drawable/map1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Roll"
            android:elevation="4dp"
            android:textAlignment="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/edittext_rollno"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="4dp"
            android:text="Get Room"
            android:fontFamily="@font/psb"
            android:textSize="20sp"
            android:backgroundTint="@color/amber"
            android:id="@+id/button"/>

    </LinearLayout>

</RelativeLayout>
